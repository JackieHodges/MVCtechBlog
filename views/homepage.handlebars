    <main>
        <div class="container-fluid all-posts">
            {{#each posts as |post| }}
            <div class="row">
                <div class="col-1"></div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                          {{post.title}}
                          <div style="text-align: right">Posted by {{user.name}} on {{post.date_created}}</div>
                        </div>
                        <div class="card-body">
                          <p class="card-text">{{post.description}}</p>
                        </div>
                      </div>
                </div>
                <div class="col-1"></div>
            </div>
            {{/each}}
        </div>
    </main>